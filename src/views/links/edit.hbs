<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card border-0">
                <div class="card-body">
                    <form action="/links/edit/{{result.id}}" method="POST">
                        <div class="form-group">
                            <input type="text" value="{{result.titulo}}" class="form-control" name="titulo" placeholder="Titulo" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="url" value="{{result.url}}" name="url" class="form-control" placeholder="URL">
                        </div>
                        <div class="form-group">
                            <textarea name="descripcion" rows="2" class="form-control" placeholder="Descripcion">{{result.descripcion}}</textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Save
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>