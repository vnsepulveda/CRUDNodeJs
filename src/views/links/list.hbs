<div class="container pd-4">
    <div class="row">
        {{#each result}}
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <a href="{{url}}" target="_blank">
                            <h3 class="card-body">
                                {{titulo}}
                            </h3>
                        </a>
                        <p class="m-2">{{descripcion}}</div>
                        <p>{{timeago creado}}</p>
                        <a href="/links/delete/{{id}}" class="btn btn-danger">Borrar link</a>
                        <a href="/links/edit/{{id}}" class="btn btn-secondary">Editar</a>
                    </div>
                </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>No hay links creados</p>
                <a href="/links/add">Crea un link!</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>